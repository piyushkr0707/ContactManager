<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.silentspaceship.contactmanager.AndroidActivity"
    tools:showIn="@layout/activity_android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Name"
        android:id="@+id/FNameLbl"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Name"
        android:id="@+id/LNameLbl"
        android:layout_below="@+id/FNameLbl"
        android:layout_alignLeft="@+id/FNameLbl"
        android:layout_alignStart="@+id/FNameLbl"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone No"
        android:id="@+id/PhNoLbl"
        android:layout_below="@+id/LNameLbl"
        android:layout_alignLeft="@+id/LNameLbl"
        android:layout_alignStart="@+id/LNameLbl"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/FNameLbl"
        android:layout_alignEnd="@+id/FNameLbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email"
        android:id="@+id/EmailLbl"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/PhNoLbl"
        android:layout_alignLeft="@+id/PhNoLbl"
        android:layout_alignStart="@+id/PhNoLbl"
        android:layout_alignRight="@+id/FNameLbl"
        android:layout_alignEnd="@+id/FNameLbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/DateLbl"
        android:layout_alignTop="@+id/Datetxbx"
        android:layout_alignLeft="@+id/EmailLbl"
        android:layout_alignStart="@+id/EmailLbl" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/FNtxtbx"
        android:layout_alignTop="@+id/FNameLbl"
        android:layout_alignLeft="@+id/LNtxtbx"
        android:layout_alignStart="@+id/LNtxtbx" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/LNtxtbx"
        android:layout_alignTop="@+id/LNameLbl"
        android:layout_toRightOf="@+id/EmailLbl"
        android:layout_marginLeft="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/PhNotxtbx"
        android:layout_alignTop="@+id/PhNoLbl"
        android:layout_alignLeft="@+id/LNtxtbx"
        android:layout_alignStart="@+id/LNtxtbx" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/Emailtxtbx"
        android:layout_alignTop="@+id/EmailLbl"
        android:layout_alignLeft="@+id/PhNotxtbx"
        android:layout_alignStart="@+id/PhNotxtbx" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/Datetxbx"
        android:layout_below="@+id/Emailtxtbx"
        android:layout_alignLeft="@+id/Emailtxtbx"
        android:layout_alignStart="@+id/Emailtxtbx"
        android:hint="mm-dd-yyyy" />

</RelativeLayout>
